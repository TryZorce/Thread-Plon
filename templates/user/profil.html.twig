{# templates/user/detail.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block body %}
    <h1>Détails de l'utilisateur</h1>

    {% if user %}
    <p>Nom: {{ user.username }}</p>
    <p>Email: {{ user.email }}</p>
{% else %}
    <p>L'utilisateur n'existe pas.</p>
{% endif %}

    <a href="{{ path('app_user_update', { 'id': user.id }) }}">Modifier</a>
    <a href="{{ path('app_user_delete', { 'id': user.id }) }}">Supprimer</a>
{% endblock %}
