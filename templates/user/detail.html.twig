{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block body %}
    <h1>Détails de l'utilisateur</h1>
    <dl>
        <dt>Nom d'utilisateur :</dt>
        <dd>{{ user.username }}</dd>
        <dt>Email :</dt>
        <dd>{{ user.email }}</dd>
    </dl>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_user_update', {'id': user.id}) }}">Modifier le profil</a>
    {% endif %}
    {% if is_granted('ROLE_ADMIN') %}
        <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">
            <button type="submit">Supprimer le profil</button>
        </form>
    {% endif %}
{% endblock %}
